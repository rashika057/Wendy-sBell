<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:id="@+id/card_view"
    android:layout_margin="5dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textFishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivImage"
            android:text="fish name"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/textFishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textFishName"
            android:text="price"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#666" />

        <ImageView
            android:id="@+id/ivImageType"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/textFishPrice"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/ivImageDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivImageType"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_bin" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_edit"
            android:id="@+id/ivImageEdit"
            android:layout_below="@+id/ivImageType"
            android:layout_toRightOf="@+id/ivImageDel"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>